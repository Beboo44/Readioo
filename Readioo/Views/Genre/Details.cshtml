@using Readioo.Business.DataTransferObjects.Genre
@model GenreDetailsDto

@{
    ViewData["Title"] = Model.GenreName + " - Readioo";

    // --- Helper Method to resolve images ---
    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;
        if (imagePath.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return imagePath;
        if (imagePath.StartsWith("~") || imagePath.StartsWith("/")) return Url.Content(imagePath);
        return Url.Content("~/" + imagePath);
    }

    // Generate a placeholder avatar for the Genre Cover
    var genreImg = "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(Model.GenreName) + "&size=300&background=6c757d&color=fff";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.GenreName - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/book.css">

    <style>
        /* Exact styling from your Author Page */
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .book-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
            transition: transform 0.2s;
            text-align: center;
        }

            .book-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }

            .book-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .book-card-body {
            padding: 10px;
        }

        .book-card-title {
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body>
    <div class="wrap" id="book-page">

        <div class="book-header">
            <div class="book-cover">
                <img src="@genreImg" alt="@Model.GenreName" style="width: 230px; height: 300px; object-fit: cover; border-radius: 0.35rem;" />
            </div>

            <div class="book-info">
                <h1 class="book-title">@Model.GenreName</h1>

                <div class="book-meta mb-3">
                    <div class="book-details">
                        <span class="badge bg-secondary">Genre</span> •
                        <span>@Model.Books.Count Books</span> •
                        <span>@Model.Authors.Count Authors</span>
                    </div>
                </div>

                <div class="mt-3">
                    <h5 class="fw-bold">About</h5>
                    <p id="descText" class="text-secondary" style="line-height: 1.6;">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.Description) && Model.Description.Length > 300)
                    {
                        <button id="toggleDesc" class="btn btn-link p-0 text-decoration-none">Show more</button>
                    }
                </div>
            </div>
        </div>

        <hr class="mt-5 mb-4" />

        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="author-books-section">
                <h3>Books in @Model.GenreName</h3>
                <div class="books-grid">
                    @foreach (var book in Model.Books)
                    {
                        var bookImgUrl = ResolveImagePath(book.BookImage);
                        <div class="book-card">
                            <a href="@Url.Action("Details", "Book", new { id = book.BookId })" style="text-decoration:none; color:inherit;">
                                <img src="@(string.IsNullOrEmpty(bookImgUrl) ? "https://placehold.co/180x250?text=No+Cover" : bookImgUrl)"
                                     alt="@book.Title" onerror="this.src='https://placehold.co/180x250?text=No+Cover'" />
                                <div class="book-card-body">
                                    <div class="book-card-title" title="@book.Title">@book.Title</div>
                                    <small class="text-muted"><i class="fa-solid fa-star text-warning"></i> @book.Rate.ToString("0.0")</small>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="mt-5 text-muted"><p>No books found for this genre.</p></div>
        }

        @if (Model.Authors != null && Model.Authors.Any())
        {
            <div class="author-books-section mt-5">
                <h3>Popular Authors in @Model.GenreName</h3>
                <hr />
                <div class="books-grid">
                    @foreach (var author in Model.Authors)
                    {
                        var authorImg = ResolveImagePath(author.AuthorImage);
                        if (string.IsNullOrEmpty(authorImg))
                        {
                            authorImg = "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(author.FullName) + "&size=200&background=random&color=fff";
                        }

                        <div class="book-card">
                            <a href="@Url.Action("Details", "Author", new { id = author.AuthorId })" style="text-decoration:none; color:inherit;">
                                <img src="@authorImg" alt="@author.FullName" />
                                <div class="book-card-body">
                                    <div class="book-card-title">@author.FullName</div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }

    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const btn = document.getElementById("toggleDesc");
        if(btn) {
            btn.addEventListener("click", () => {
                const desc = document.getElementById("descText");
                if (desc.classList.contains("expanded")) {
                    desc.classList.remove("expanded");
                    btn.textContent = "Show more";
                } else {
                    desc.classList.add("expanded");
                    btn.textContent = "Show less";
                }
            });
        }
    </script>
</body>
</html>
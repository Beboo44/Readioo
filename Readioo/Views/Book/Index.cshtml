@using Readioo.Business.DataTransferObjects.Book
@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Books Library</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Create New Book
        </a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>Lang</th>
                <th>Author</th>
                <th>Pages</th>
                <th>Rate</th>
                <th style="width: 15%;">Genres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(book.BookImage))
                        {
                            <img src="~/@book.BookImage" alt="Cover"
                                 class="rounded shadow-sm"
                                 style="height: 60px; width: 40px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-center text-white"
                                 style="height: 60px; width: 40px; font-size: 0.8rem;">
                                No IMG
                            </div>
                        }
                    </td>
                    <td class="fw-bold">@book.Title</td>
                    <td>@book.Isbn</td>
                    <td>@book.Language</td>
                    <td>
                        <a asp-controller="Author" asp-action="Details" asp-route-id="@book.AuthorId"
                           class="text-decoration-none fw-semibold">
                            @book.AuthorName
                        </a>
                    </td>
                    <td>@book.PagesCount</td>

                    <td>
                        <span class="text-warning"><i class="fa-solid fa-star"></i> @book.Rate.ToString("0.00")</span>
                    </td>

                    <td>
                        @if (book.Genres != null && book.Genres.Any())
                        {
                            @foreach (var genre in book.Genres)
                            {
                                <a asp-controller="Genre" asp-action="Details" asp-route-id="@genre.Id"
                                   class="badge bg-secondary text-decoration-none me-1 mb-1">
                                    @genre.GenreName
                                </a>
                            }
                        }
                        else
                        {
                            <span class="text-muted small fst-italic">No Genres</span>
                        }
                    </td>

                    <td>
                        <div class="d-flex gap-2 flex-wrap">
                            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm text-dark">
                                <i class="fa-solid fa-pen"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm text-white">
                                <i class="fa-solid fa-circle-info"></i> Details
                            </a>
                            <form asp-action="Delete" asp-route-id="@book.BookId" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete \'@book.Title\'?');">
                                    <i class="fa-solid fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
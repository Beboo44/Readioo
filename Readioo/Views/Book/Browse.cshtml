@using Readioo.Business.DataTransferObjects.Book
@using Readioo.Business.DataTransferObjects.Genre

@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Browse Books";
    var genres = ViewBag.Genres as IEnumerable<GenreDto>;

    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;
        if (imagePath.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return imagePath;
        if (imagePath.StartsWith("~") || imagePath.StartsWith("/")) return Url.Content(imagePath);
        return Url.Content("~/" + imagePath);
    }
}

<!-- Google Fonts Import -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

<div class="container my-5">

    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-12 border-bottom pb-3">
            <h1 class="display-5 fw-bold font-serif text-navy">
                <i class="fa-solid fa-compass me-2"></i>Browse Collection
            </h1>
            <p class="lead text-muted mb-0 font-sans">Discover your next great adventure from our vast library.</p>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filters -->
        <aside class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-3 filter-panel sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-2">
                    <h5 class="fw-bold text-navy font-serif">
                        <i class="fa-solid fa-filter me-2 text-orange"></i>Filter by Genre
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush font-sans" id="genreFilter">
                        <button type="button" class="list-group-item list-group-item-action active-filter d-flex justify-content-between align-items-center" data-genre="all">
                            <span><i class="fa-solid fa-layer-group me-2 opacity-50"></i>All Genres</span>
                            <i class="fa-solid fa-chevron-right small"></i>
                        </button>
        <!-- 1. Fixed Layout Structure (Sidebar Left, Content Right) -->
        <div class="main-layout container mb-5">

            <!-- Sidebar Filters -->
            <aside class="sidebar">
                <div class="card">
                    <h4>Filter by Genre</h4>
                    <ul class="filter-list" id="genreFilter">
                        <!-- 'All' Option -->
                        <li data-genre="all" class="active" onclick="filterBooks('all', this)">All Genres</li>

                        <!-- 2. Dynamic Side Table -->
                        @if (genres != null && genres.Any())
                        {
                            foreach (var genre in genres)
                            {
                                <li data-genre="@genre.GenreName" onclick="filterBooks('@genre.GenreName', this)">
                                    @genre.GenreName
                                </li>
                            }
                        }
                        else
                        {
                            <li class="text-muted">No genres found.</li>
                        }
                    </ul>
                </div>
            </aside>

        <!-- Main Content -->
        <section class="col-lg-9">

            <!-- Toolbar -->
            <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm border toolbar-container">
                <div class="d-flex align-items-center">
                    <span class="text-muted small me-2 font-sans">Showing:</span>
                    <span class="fw-bold text-navy font-sans">@Model.Count() Books</span>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <!-- Sort Removed -->
                    <!-- View Toggles (Larger Size) -->
                    <div class="btn-group" role="group" aria-label="View toggle">
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary active" id="btnGrid" style="width: 60px;">
                            <i class="fa-solid fa-grid-2"></i>
                        </button>
                        <button type="button" class="btn btn-lg btn-outline-light text-secondary" id="btnList" style="width: 60px;">
                            <i class="fa-solid fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Book Grid/List Container -->
            <div class="row g-4" id="bookGrid">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        // Clean up genres for data attribute
                        var genreString = item.BookGenres != null ? string.Join(" ", item.BookGenres).ToLower() : "";
                        var imageUrl = !string.IsNullOrEmpty(item.BookImage) ? Url.Content("~/" + item.BookImage) : "https://placehold.co/300x450?text=No+Cover";

                        <div class="col-sm-6 col-md-4 col-xl-4 book-item" data-genre="@genreString">
                            <div class="card h-100 border-0 shadow-sm book-card">
                                <!-- Image Area with Blur Effect -->
                                <div class="book-cover-container">
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId" class="d-block h-100 w-100 position-relative overflow-hidden">
                                        <!-- Blurred Background -->
                                        <div class="book-cover-blur" style="background-image: url('@imageUrl');"></div>
                                        <!-- Main Image -->
                                        <img src="@imageUrl" class="book-cover-img" alt="@item.Title" onerror="this.src='https://placehold.co/300x450?text=No+Cover'">
                                    </a>
                                </div>

                                <div class="card-body d-flex flex-column p-3">
                                    <h5 class="card-title fw-bold text-truncate mb-1 font-serif">
                                        <a asp-controller="Book" asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none text-navy stretched-link link-hover-orange">
                                            @item.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted small mb-2 font-sans">@item.AuthorName</p>

                                        <!-- Rating -->
                                        <div class="book-rating">
                                            @if (item.Rate > 0)
                                            {
                                                <span class="text-warning">
                                                    <i class="fas fa-star"></i> @item.Rate.ToString("0.0")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Not rated</span>
                                            }
                                        </div>

                                        <div class="book-actions">
                                            <form asp-controller="Book" asp-action="AddToShelf" method="post">
                                                <input type="hidden" name="bookId" value="@item.BookId" />
                                                <input type="hidden" name="shelfName" value="Want to Read" />
                                                <button type="submit" class="shelf-btn">
                                                    Want to Read
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center text-muted py-5">
                            <h4>No books found.</h4>
                        </div>
                    }
                </div>

                <div id="noResultsMsg" class="text-center text-muted py-5 d-none">
                    <h4>No books found for this genre.</h4>
                </div>
            </section>
    </div>
</div>


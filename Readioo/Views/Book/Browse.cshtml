        width: 100%;
        flex: 0 0 100%;
        max-width: 100%;
    }

    #bookGrid.list-view .book-card {
        flex-direction: row;
        height: auto;
        min-height: 220px;
    }

    #bookGrid.list-view .book-cover-container {
        width: 180px;
        height: auto; /* Match card height */
        flex-shrink: 0;
    }

    #bookGrid.list-view .card-body {
        justify-content: center;
        padding-left: 2rem !important;
        padding-right: 2rem !important;
    }

    /* Adjustments for list view responsiveness */
    @@media (max-width: 576px) {
        #bookGrid.list-view .book-card {
            flex-direction: column;
        }

        #bookGrid.list-view .book-cover-container {
            width: 100%;
            height: 300px;
        }
    }
</style>


@using Readioo.Business.DataTransferObjects.Book

@model BookDto
@{
    ViewData["Title"] = Model.Title + " - Readioo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" href="~/css/book.css?v=@DateTime.Now.Ticks">

</head>

<body>

    

    <!-- ✅ Main Book Section -->
    <div class="wrap" id="book-page">
        <div class="book-header">
            <div class="book-cover">
                <img src="~/@Model.BookImage" alt="@Model.Title" />
            </div>

            <div class="book-info">
                <h1 class="book-title">@Model.Title</h1>
                <h3 class="book-author"><a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId"> by @Model.AuthorName </a></h3>

                <div class="book-meta">
                    <div class="rating">
                        <span id="avgRating" class="stars"></span>
                        <span class="rating-text">(@Model.Rate.ToString("0.00") · @Model.Reviews.Count() reviews)</span>
                    </div>

                    <div class="book-details">
                        <span>Published: @Model.PublishDate</span> •
                        <span>
                            Genres:
                            @if (Model.BookGenres.Any())
                            {
                                @string.Join(", ", Model.BookGenres)
                            }
                            else
                            {

                                <text>Unknown</text>
                            }
                        </span>
                    </div>
                </div>

                <div class="actions">
                    <select id="shelfSelect" class="form-select">
                        <option value="none">Add to shelf</option>
                        <option value="currently-reading">Currently Reading</option>
                        <option value="read">Read</option>
                        <option value="to-read">Want to Read</option>
                    </select>

                    <div class="user-rating">
                        <span>Your Rating:</span>
                        <div id="userStars" class="stars" data-book-id="@Model.BookId" data-user-rating="@(Model.UserRating ?? 0)">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star-rate @(Model.UserRating.HasValue && i <= Model.UserRating.Value ? "filled" : "")" data-rating="@i">★</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ✅ Book Description -->
        <div class="book-description">
            <h2>Book Description</h2>
            <p id="bookDesc">@Model.Description</p>
            <button id="toggleDesc" class="btn btn-link p-0">Show more</button>
        </div>
        <div class="gr-review-form">
            <h3 class="gr-form-title">Add Your Review</h3>

            <form asp-controller="Review" asp-action="Add" method="post">
                <input type="hidden" name="BookId" value="@Model.BookId" />

                <label class="gr-label">Your Rating</label>
                <div class="gr-rating-input">
                    @for (int i = 5; i >= 1; i--) // 👈 Change loop to run from 5 down to 1
                    {
                        <label>
                            <input type="radio" name="Rating" value="@i" required />
                            <span class="star-input">★</span>
                        </label>
                    }
                </div>

                <label class="gr-label">Your Review</label>
                <textarea name="ReviewText" class="gr-textarea" rows="4" required></textarea>

                <button type="submit" class="gr-submit-btn">Submit Review</button>
            </form>
        </div>

        <!-- ✅ Community Reviews -->
        <div class="book-reviews">
            <h2>Community Reviews</h2>

            <div id="reviewsContainer" class="reviews-list">
                @if (!Model.Reviews.Any())
                {
                    <p class="text-muted">No reviews yet.</p>
                }
                else
                {
                    foreach (var r in Model.Reviews)
                    {
                        <div class="gr-review-card">
                            <div class="gr-review-header">
                                <div class="gr-review-user">@r.Username</div>
                                <div class="gr-review-date">@r.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>

                            <div class="gr-review-rating">
                                @for (int j = 1; j <= 5; j++)
                                {
                                    if (j <= r.Rating)
                                    {
                                        <span class="star filled">★</span>
                                    }
                                    else
                                    {
                                        <span class="star">★</span>
                                    }
                                }
                            </div>

                            <div class="gr-review-text">
                                @r.ReviewText
                            </div>
                        </div>
                    }

                }
            </div>
        </div>
        <hr />

    </div>

    

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/book.js?v=@DateTime.Now.Ticks"></script>


    <script>
        function createStarSVG(filled) {
            const color = filled ? '#f6b438' : '#e0e0e0';
            const svg = document.createElementNS("http://www.w3.org/2000/svg", "svg");
            svg.setAttribute("viewBox", "0 0 20 20");
            svg.setAttribute("fill", color);
            svg.style.width = "18px";
            svg.style.height = "18px";
            svg.style.display = "inline-block";

            const path = document.createElementNS("http://www.w3.org/2000/svg", "path");
            path.setAttribute("d", "M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.951a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.951c.3.921-.755 1.688-1.538 1.118l-3.37-2.448a1 1 0 00-1.176 0l-3.37 2.448c-.783.57-1.838-.197-1.538-1.118l1.286-3.951a1 1 0 00-.364-1.118L2.063 9.378c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.951z");

            svg.appendChild(path);
            return svg;
        }

        // Render average rating stars
        document.addEventListener("DOMContentLoaded", function() {
            const avg = @Model.Rate;
            const container = document.getElementById("avgRating");

            if (container) {
                container.innerHTML = ''; // Clear existing content
                for (let i = 0; i < 5; i++) {
                    const filled = i < Math.floor(avg);
                    const star = createStarSVG(filled);
                    container.appendChild(star);
                }
            }
        });
    </script>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Books</a>
    </div>

</body>
</html>
@using Readioo.Business.DataTransferObjects.Book
@model BookDetailsDto

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">

    <div class="row">
        <!-- Book Image -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.BookImage))
                {
                    <img src="@Model.BookImage" class="card-img-top" alt="@Model.Title">
                }
                else
                {
                    <img src="~/images/no-image.png" class="card-img-top" alt="No Image">
                }
            </div>
        </div>

        <!-- Book Info -->
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p class="text-muted">by <strong>@Model.Author.FullName</strong></p>
            <p><strong>ISBN:</strong> @Model.Isbn</p>
            <p><strong>Language:</strong> @Model.Language</p>
            <p><strong>Pages:</strong> @Model.PagesCount</p>
            <p><strong>Published:</strong> @Model.PublishDate.ToShortDateString()</p>
            <p><strong>Rate:</strong> @Model.Rate / 5</p>

            @if (!string.IsNullOrEmpty(Model.MainCharacters))
            {
                <p><strong>Main Characters:</strong> @Model.MainCharacters</p>
            }

            <hr />

            <h5>Description</h5>
            <p>@Model.Description</p>

            <hr />

            <h5>Genres</h5>
            @if (Model.BookGenres != null && Model.BookGenres.Any())
            {
                <p>
                    @foreach (var genre in Model.BookGenres)
                    {
                        <span class="badge bg-primary me-1">@genre</span>
                    }
                </p>
            }
            else
            {
                <p>No genres listed</p>
            }

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning me-2">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h4>Reviews (@Model.Reviews?.Count ?? 0)</h4>
            <hr />

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6 class="card-title mb-1">@review.Username</h6>
                                <small class="text-muted">@review.CreatedAt.ToShortDateString()</small>
                            </div>
                            <p class="mb-1"><strong>Rating:</strong> @review.Rating / 5</p>
                            <p class="card-text">@review.ReviewText</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No reviews yet for this book.</p>
            }
        </div>
    </div>

</div>

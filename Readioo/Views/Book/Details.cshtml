@using Readioo.Business.DataTransferObjects.Book
@using Readioo.Business.DTO

@model BookDto
@{
    ViewData["Title"] = Model.Title + " - Readioo";
    var userShelves = ViewBag.UserShelves as List<ShelfDto>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Title - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" href="~/css/book.css?v=@DateTime.Now.Ticks">
</head>

<body>
    <div class="wrap" id="book-page">
        <div class="book-header">
            <div class="book-cover">
                <img src="~/@Model.BookImage" alt="@Model.Title" />
            </div>

            <div class="book-info">
                <h1 class="book-title">@Model.Title</h1>
                <h3 class="book-author"><a asp-controller="Author" asp-action="Details" asp-route-id="@Model.AuthorId"> by @Model.AuthorName </a></h3>

                <div class="book-meta">
                    <div class="rating">
                        <span id="avgRating" class="stars"></span>
                        <span class="rating-text">(@Model.Rate.ToString("0.00") · @Model.Reviews.Count() reviews)</span>
                    </div>

                    <div class="book-details">
                        <span>Published: @Model.PublishDate</span> •
                        <span>
                            Genres:
                            @if (Model.BookGenres.Any())
                            {
                                @string.Join(", ", Model.BookGenres)
                            }
                            else
                            {
                                <text>Unknown</text>
                            }
                        </span>
                    </div>
                </div>

                <div class="actions" style="display: flex; gap: 10px; align-items: center;">
                    <!-- ✅ DYNAMIC DROPDOWN -->
                    <div class="d-flex gap-2">
                        @Html.AntiForgeryToken()

                        <select id="shelfSelect" class="form-select" style="width: auto;">
                            <option value="" selected disabled>Add to shelf</option>
                            @if (userShelves != null)
                            {
                                foreach (var shelf in userShelves)
                                {
                                    <option value="@shelf.ShelfName">@shelf.ShelfName</option>
                                }
                            }
                        </select>
                        <button class="btn btn-outline-primary" onclick="confirmMove()">Move</button>
                    </div>

                    <div class="user-rating">
                        <span>Your Rating:</span>
                        <div id="userStars" class="stars"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="book-description">
            <h2>Book Description</h2>
            <p id="bookDesc">@Model.Description</p>
            <button id="toggleDesc" class="btn btn-link p-0">Show more</button>
        </div>

        <!-- Review Form & List (Kept as is) -->
        <div class="gr-review-form">
            <h3 class="gr-form-title">Add Your Review</h3>
            <form asp-controller="Review" asp-action="Add" method="post">
                <input type="hidden" name="BookId" value="@Model.BookId" />
                <label class="gr-label">Your Rating</label>
                <div class="gr-rating-input">
                    @for (int i = 5; i >= 1; i--)
                    {
                        <label>
                            <input type="radio" name="Rating" value="@i" required />
                            <span class="star-input">★</span>
                        </label>
                    }
                </div>
                <label class="gr-label">Your Review</label>
                <textarea name="ReviewText" class="gr-textarea" rows="4" required></textarea>
                <button type="submit" class="gr-submit-btn">Submit Review</button>
            </form>
        </div>

        <div class="book-reviews">
            <h2>Community Reviews</h2>
            <div id="reviewsContainer" class="reviews-list">
                @if (!Model.Reviews.Any())
                {
                    <p class="text-muted">No reviews yet.</p>
                }
                else
                {
                    foreach (var r in Model.Reviews)
                    {
                        <div class="gr-review-card">
                            <div class="gr-review-header">
                                <div class="gr-review-user">@r.Username</div>
                                <div class="gr-review-date">@r.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="gr-review-rating">
                                @for (int j = 1; j <= 5; j++)
                                {
                                    <span class="star @(j <= r.Rating ? "filled" : "")">★</span>
                                }
                            </div>
                            <div class="gr-review-text">@r.ReviewText</div>
                        </div>
                    }
                }
            </div>
        </div>
        <hr />
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/book.js?v=@DateTime.Now.Ticks"></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const avg = @Model.Rate;
            const container = document.getElementById("avgRating");
            let html = "";
            for (let i = 0; i < 5; i++) {
                html += makeStarSVG(i < avg);
            }
            container.innerHTML = html;
        });

        function confirmMove() {
            const select = document.getElementById('shelfSelect');
            const shelfName = select.value;
            const bookId = @Model.BookId;

            if (!shelfName) {
                alert("Please select a shelf first.");
                return;
            }

            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';

            fetch('/Shelf/MoveBook', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: `bookId=${bookId}&shelfName=${encodeURIComponent(shelfName)}`
            })
            .then(async response => {
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Server Error:', errorText);
                    throw new Error(`Server returned ${response.status}`);
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert("Book moved to " + shelfName + " successfully!");
                } else {
                    alert("Failed: " + (data.message || "Unknown error"));
                }
            })
            .catch(error => {
                console.error('Fetch Error:', error);
                alert("An error occurred. Check console for details.");
            });
        }
    </script>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Books</a>
    </div>
</body>
</html>
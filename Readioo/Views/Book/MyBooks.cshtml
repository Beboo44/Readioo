@model Readioo.ViewModel.MyBooksViewModel
@using System.Security.Claims
@using Readioo.Business.DTO
@inject IUserService UserService
@inject IShelfService ShelfService

@{
    ViewData["Title"] = "My Books";

    var userId = Model.UserId;
    var shelveswithBooks = Model.Shelveswithbook;

    var favoriteShelf = shelveswithBooks.FirstOrDefault(s => s.ShelfName == "Favorites");

    // Calculate total unique books added across all shelves for the stat
    var totalBooks = shelveswithBooks != null
        ? shelveswithBooks.SelectMany(s => s.Books).Select(b => b.BookId).Distinct().Count()
        : 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Books - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/my_books.css?v=@DateTime.Now.Ticks">

    <style>
        /* ✅ ADDED: Flexbox layout to handle side-by-side positioning with gap */
        .main-layout {
            display: flex;
            flex-direction: row;
            gap: 40px; /* This creates the margin space you requested */
            align-items: flex-start;
            margin-top: 20px;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 280px; /* Fixed width for the sidebar */
            flex-shrink: 0; /* Prevent sidebar from shrinking */
        }

        /* Main Content Styling */
        .main-content {
            flex-grow: 1; /* Take up remaining space */
            width: 100%; /* Ensure table container fills the space */
        }

        /* Styling for the moved header info */
        .sidebar-header {
            margin-bottom: 20px;
        }

        .page-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            line-height: 1.2;
        }

        .page-subtitle {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .stats-row {
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="wrap" id="app">

        <!-- Moved header content inside the main layout/sidebar logic below -->

        <div class="main-layout container">
            <!-- Sidebar -->
            <aside class="sidebar">

                <!-- ✅ MOVED: Header Info is now above the side table -->
                <div class="sidebar-header">
                    <div class="page-title">My Books</div>
                    <div class="page-subtitle">Track your reading journey</div>
                    <div class="stats-row">
                        <div class="stat"><strong>@totalBooks</strong> Books Added</div>
                    </div>
                </div>

                <div class="card">
                    <h3>My Bookshelves</h3>
                    <ul class="shelf-list" id="shelfList">
                        <li class="active" data-shelf="all">All Books</li>

                        @foreach (var shelf in shelveswithBooks)
                        {
                            <li data-shelf="@shelf.ShelfName.ToLower().Replace(" ", "-")">
                                @shelf.ShelfName
                            </li>
                        }
                    </ul>
                </div>
            </aside>

            <!-- Main Content -->
            <section class="main-content">
                <h2 class="section-title" id="sectionTitle">All Books</h2>

                <div class="books-table-container">
                    <table class="books-table table table-hover">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Author</th>
                                <th>My Rating</th>
                                <th>Date Added</th>
                                <th>Bookshelf</th>
                            </tr>
                        </thead>

                        <tbody id="booksTableBody">
                            @if (favoriteShelf != null && favoriteShelf.Books != null)
                            {
                                foreach (var book in favoriteShelf.Books)
                                {
                                    <tr data-shelves="@string.Join(",", book.BookShelves.Select(s => s.ToLower().Replace(" ", "-")))">
                                        <td>
                                            <div class="book-title-cell d-flex align-items-center">
                                                <div class="table-book-cover me-3">
                                                    <img src="~/@book.BookImage" alt="@book.Title" style="width: 50px; height: 75px; object-fit: cover; border-radius: 4px;" />
                                                </div>
                                                <div class="book-title-info">
                                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="book-link fw-bold text-decoration-none text-dark">
                                                        @book.Title
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                        <td>@book.AuthorName</td>

                                        <td>
                                            <div class="rating-cell">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < book.Rate)
                                                    {
                                                        <i class="fas fa-star" style="color:#f6b438"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star" style="color:#e0e0e0"></i>
                                                    }
                                                }
                                            </div>
                                        </td>

                                        <td>
                                            <!-- Date Added placeholder if available in model -->
                                            @book.PublishDate.ToString("MMM dd, yyyy")
                                        </td>

                                        <td>
                                            @foreach (var s in book.BookShelves)
                                            {
                                                <span class="badge bg-light text-dark border me-1">@s</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </section>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/my_books.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>
@model Readioo.ViewModel.MyBooksViewModel
@using System.Security.Claims
@using Readioo.Business.DTO
@inject IUserService UserService
@inject IShelfService ShelfService

@{
    ViewData["Title"] = "My Books";

    var userId = Model.UserId;
    var shelveswithBooks = Model.Shelveswithbook;

    // --- LOGIC: Create a master list of ALL unique books from all shelves ---
    // This logic automatically handles "Want to Read", "Currently Reading", "Books Read", etc.
    // regardless of which specific shelf they are on.
    var allUserBooks = shelveswithBooks
        .SelectMany(s => s.Books)
        .GroupBy(b => b.BookId)
        .Select(group =>
        {
            var firstBook = group.First();

            // Collect ALL unique shelf names for this book from the group
            // We look at the shelf objects themselves to get the accurate names
            var allShelvesForBook = shelveswithBooks
                .Where(shelf => shelf.Books.Any(b => b.BookId == firstBook.BookId))
                .Select(shelf => shelf.ShelfName)
                .Distinct()
                .ToList();

            return new { Book = firstBook, Shelves = allShelvesForBook };
        })
        .ToList();

    var totalBooks = allUserBooks.Count();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Books - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/my_books.css?v=@DateTime.Now.Ticks">
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


    <style>
        .main-layout {
            display: flex;
            flex-direction: row;
            gap: 40px;
            align-items: flex-start;
            margin-top: 20px;
        }

        .sidebar {
            width: 280px;
            flex-shrink: 0;
        }

        .main-content {
            flex-grow: 1;
            width: 100%;
        }

        .sidebar-header {
            margin-bottom: 20px;
        }

        .page-title {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            line-height: 1.2;
        }

        .page-subtitle {
            font-size: 1rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .stats-row {
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="wrap" id="app">

        <div class="main-layout container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="sidebar-header">
                    <div class="page-title">My Books</div>
                    <div class="page-subtitle">Track your reading journey</div>
                    <div class="stats-row">
                        <div class="stat"><strong>@totalBooks</strong> Books Added</div>
                    </div>
                </div>

                <div class="card">
                    <h3>My Bookshelves</h3>
                    <ul class="shelf-list" id="shelfList">
                        <li class="active" data-shelf="all">All Books</li>

                        @foreach (var shelf in shelveswithBooks)
                        {
                            <li data-shelf="@shelf.ShelfName.ToLower().Replace(" ", "-")">
                                @shelf.ShelfName
                            </li>
                        }
                    </ul>
                </div>
            </aside>

            <!-- Main Content -->
            <section class="main-content">
                <h2 class="section-title" id="sectionTitle">All Books</h2>

                <div class="books-table-container">
                    <table class="books-table table table-hover">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Author</th>
                                <th>My Rating</th>
                                <th>Date Added</th>
                                <th>Bookshelf</th>
                            </tr>
                        </thead>

                        <tbody id="booksTableBody">
                            @if (allUserBooks != null && allUserBooks.Any())
                            {
                                foreach (var item in allUserBooks)
                                {
                                    var book = item.Book;
                                    var shelves = item.Shelves;

                                    // Construct the filter string (e.g., "favorites,want-to-read,currently-reading")
                                    var shelfFilterString = string.Join(",", shelves.Select(s => s.ToLower().Replace(" ", "-")));

                                    <tr data-shelves="@shelfFilterString">
                                        <td>
                                            <div class="book-title-cell d-flex align-items-center">
                                                <div class="table-book-cover me-3">
                                                    <img src="~/@book.BookImage" alt="@book.Title" style="width: 50px; height: 75px; object-fit: cover; border-radius: 4px;" />
                                                </div>
                                                <div class="book-title-info">
                                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.BookId" class="book-link fw-bold text-decoration-none text-dark">
                                                        @book.Title
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                        <td>@book.AuthorName</td>

                                        <td>
                                            <div class="rating-cell">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < book.Rate)
                                                    {
                                                        <i class="fas fa-star" style="color:#f6b438"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star" style="color:#e0e0e0"></i>
                                                    }
                                                }
                                            </div>
                                        </td>

                                        <td>
                                            @book.PublishDate.ToString("MMM dd, yyyy")
                                        </td>

                                        <td>
                                            @foreach (var s in shelves)
                                            {
                                                <span class="badge bg-light text-dark border me-1">@s</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted p-4">No books found in your library.</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </section>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/my_books.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>
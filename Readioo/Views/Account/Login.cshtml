@using Readioo.ViewModel
@model LoginVM

@{
    ViewData["Title"] = "Login to Readioo";
    // Assuming your file is named _SimpleLayout.cshtml
    Layout = "_SimpleLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 col-lg-4 p-4 shadow-lg bg-white rounded">

        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index">
                <img class="d-block mx-auto mb-2" src="~/images/Logo.jpg" alt="Readioo Logo" style="max-height: 80px;">
            </a>
            <h1 class="h3 mb-3 fw-normal">Welcome Back!</h1>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="form-floating mb-3">
                <input type="email" asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email">Email address</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">
                        Keep me signed in
                    </label>
                </div>
                <div>
                    <a class="text-decoration-none small" href="#">Forgot Password?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
            </button>

        </form>

        <hr class="my-4">

        <div class="text-center">
            <p class="mb-2 text-muted">New to Readioo?</p>
            <a class="btn btn-outline-secondary w-100" asp-controller="Account" asp-action="Register">
                Create New Account
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        // Include validation scripts for client-side checks
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
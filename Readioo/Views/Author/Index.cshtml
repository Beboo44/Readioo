    @model IEnumerable<Readioo.Models.Author>

    @{
        ViewData["Title"] = "Index";

        // Helper to resolve image path
        string ResolveImagePath(string imagePath)
        {
            if (string.IsNullOrEmpty(imagePath)) return null;
            if (imagePath.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
                imagePath.StartsWith("https://", StringComparison.OrdinalIgnoreCase)) return imagePath;
            if (imagePath.StartsWith("~")) return Url.Content(imagePath);
            if (imagePath.StartsWith("/")) return Url.Content(imagePath);
            return Url.Content("~/" + imagePath);
        }

        string GetAvatar(string name, string imagePath)
        {
            var resolvedPath = ResolveImagePath(imagePath);
            if (!string.IsNullOrEmpty(resolvedPath)) return resolvedPath;

            return "https://ui-avatars.com/api/?name=" + Uri.EscapeDataString(name ?? "Author") + "&size=80&background=6c757d&color=fff";
        }
    }

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <h1>Authors</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Add New Author</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Photo</th>
                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Bio)</th>
                <th>@Html.DisplayNameFor(model => model.First().BirthCountry)</th>
                <th>@Html.DisplayNameFor(model => model.First().BirthCity)</th>
                <th>@Html.DisplayNameFor(model => model.First().BirthDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().DeathDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                @* var avatar = GetAvatar(item.FullName, item.AuthorImage); *@

                <tr>
                    <td>
                        <img src="~/@item.AuthorImage"
                             alt="Photo of @item.FullName"
                             style="width: 80px; height: 80px; object-fit: cover; border-radius: 0.25rem;"
                             onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(item.FullName ?? "Author")&size=80&background=6c757d&color=fff';" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bio)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthCountry)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthCity)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeathDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline me-2" onsubmit="return confirm('Are you sure you want to permanently delete @item.FullName?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-x-circle"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<div class="mt-3">

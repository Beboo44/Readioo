@using Readioo.Business.DataTransferObjects.Author
@model AuthorDto

@{
    ViewData["Title"] = Model.FullName + " - Readioo";

    // --- Helper methods ---
    string ResolveImagePath(string imagePath)
    {
        if (string.IsNullOrEmpty(imagePath)) return null;

        // External URL
        if (imagePath.StartsWith("http://", StringComparison.OrdinalIgnoreCase) ||
            imagePath.StartsWith("https://", StringComparison.OrdinalIgnoreCase))
            return imagePath;

        // Paths like ~/images/... or /uploads/...
        if (imagePath.StartsWith("~") || imagePath.StartsWith("/"))
            return Url.Content(imagePath);

        // Stored relative path (ex: "uploads/authors/img.jpg")
        return Url.Content("~/" + imagePath);
    }

    string GetAvatar(string name, string imagePath)
    {
        var resolved = ResolveImagePath(imagePath);

        if (!string.IsNullOrEmpty(resolved))
            return resolved;

        // avatar fallback
        return "https://ui-avatars.com/api/?name=" +
            Uri.EscapeDataString(name ?? "Author") +
            "&size=200&background=6c757d&color=fff";
    }

    // NOTE: In your DTO the property is named 'AuthorImage', not 'AuthorImagePath'
    var authorImg = GetAvatar(Model.FullName, Model.AuthorImage);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.FullName - Readioo</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/globalandbook.css">
    <link rel="stylesheet" href="~/css/book.css">

    <style>
        /* Simple styling for the books grid */
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .book-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
            transition: transform 0.2s;
            text-align: center;
        }

            .book-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            }

            .book-card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .book-card-body {
            padding: 10px;
        }

        .book-card-title {
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body>

    <!-- Main Author Section -->
    <div class="wrap" id="book-page">

        <div class="book-header">
            <div class="book-cover">
                <img src="~/@Model.AuthorImage"
                     alt="@Model.FullName"
                     style="width: 230px; height: 300px; object-fit: cover; border-radius: 0.35rem;"
                     onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName)&size=200&background=6c757d&color=fff';" />
            </div>

            <div class="book-info">
                <h1 class="book-title">@Model.FullName</h1>

                <div class="book-meta">
                    <div class="book-details">
                        <span>Born: @Model.BirthCity, @Model.BirthCountry</span> •
                        <span>Birth Date: @Model.BirthDate</span>

                        @if (Model.DeathDate != null)
                        {
                            <span> • Died: @Model.DeathDate</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Biography section -->
        <div class="book-description">
            <h2>Biography</h2>
            <p id="bioText">@Model.Bio</p>
            <button id="toggleDesc" class="btn btn-link p-0">Show more</button>
        </div>

        <!-- NEW SECTION: Author's Books -->
        @if (Model.Books != null && Model.Books.Any())
        {
            <div class="author-books-section mt-5">
                <h3>Books by @Model.FullName</h3>
                <hr />
                <div class="books-grid">
                    @foreach (var book in Model.Books)
                    {
                        var bookImgUrl = ResolveImagePath(book.BookImage);

                        <div class="book-card">
                            <a href="@Url.Action("Details", "Book", new { id = book.BookId })" style="text-decoration:none; color:inherit;">
                                <img src="@(string.IsNullOrEmpty(bookImgUrl) ? "https://placehold.co/180x250?text=No+Cover" : bookImgUrl)"
                                     alt="@book.Title"
                                     onerror="this.src='https://placehold.co/180x250?text=No+Cover'" />

                                <div class="book-card-body">
                                    <div class="book-card-title" title="@book.Title">@book.Title</div>
                                    <small class="text-muted">
                                        <i class="fa-solid fa-star text-warning"></i> @book.Rate.ToString("0.0")
                                    </small>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="mt-5 text-muted">
                <p>No books found for this author.</p>
            </div>
        }

    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Expandable biography -->
    <script>
        document.getElementById("toggleDesc").addEventListener("click", () => {
            const bio = document.getElementById("bioText");
            const btn = document.getElementById("toggleDesc");

            if (bio.classList.contains("expanded")) {
                bio.classList.remove("expanded");
                btn.textContent = "Show more";
            } else {
                bio.classList.add("expanded");
                btn.textContent = "Show less";
            }
        });
    </script>

</body>
</html>
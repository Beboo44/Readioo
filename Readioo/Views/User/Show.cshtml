<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
<link rel="stylesheet" href="~/css/globalandbook.css" />
<link rel="stylesheet" href="~/css/profile.css" />
<body>
    

    <!-- Profile Section -->
    <main class="profile-page container">
        <div class="profile-header">
            <div class="profile-pic">
                <!-- Random realistic image -->
                <img src="https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?w=400&h=400&fit=crop" alt="User Photo" />
            </div>
            <div class="profile-info">
                <!-- New Name -->
                <h2 class="username">Sofia Ahmed</h2>
                <!-- Updated Bio -->
                <p class="bio">
                    A lifelong reader who loves discovering contemporary fiction, memoirs, and stories that inspire.
                    Sharing reviews and connecting with readers around the world 🌍.
                </p>
                <div class="action-buttons">
                    <button class="btn btn-outline-primary btn-sm edit-profile">Edit Profile</button>

                </div>
            </div>
        </div>

        <div class="stats">
            <div class="stat-box">
                <h4>Books Read</h4>
                <p>58</p>
            </div>
            <div class="stat-box">
                <h4>Currently Reading</h4>
                <p>2</p>
            </div>
            <div class="stat-box">
                <h4>Want to Read</h4>
                <p>25</p>
            </div>
            <div class="stat-box">
                <h4>Average Rating</h4>
                <p>4.5</p>
            </div>
        </div>

        <section class="bookshelf">
            <h3>📚 Favorite Books</h3>
            <div class="book-grid" id="favBooks"></div>
        </section>
    </main>

   

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/profile.js"></script>
</body>
